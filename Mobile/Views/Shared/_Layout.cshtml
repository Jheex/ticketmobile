<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - INOVATECH</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" />

</head>
<body>
    <header>
        <div class="header-left">
            <i id="sidebarToggle" class="fas fa-bars"></i>
        </div>
        <div class="header-center">INOVATECH</div>
        <div class="header-right">
            <i class="fas fa-user-circle"></i>
        </div>
    </header>

    <div class="page-container">
        <!-- sidebar -->
        <div class="sidebar" id="sidebar">
            <ul>
                <li><i class="fas fa-home"></i> <span>Início</span></li>
                <li><i class="fas fa-chart-line"></i> <span>Relatórios</span></li>
                <li><i class="fas fa-cogs"></i> <span>Configurações</span></li>
            </ul>

            <!-- Footer interno da sidebar -->
            <div class="sidebar-footer">
                <i class="fas fa-user-circle fa-2x"></i>
                <span>@User.Identity.Name</span>
            </div>
        </div>


        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <footer>
        INOVATECH - Todos os direitos reservados
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $('#sidebarToggle').click(function(){
                $('.sidebar').toggleClass('active');
            });
        });
    </script>
</body>
</html>

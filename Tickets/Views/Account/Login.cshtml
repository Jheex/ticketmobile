@model tickets.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null; // sem header/footer do layout padrão
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - INOVATECH</title>
    
    <!-- Bootstrap (opcional, só para grid e classes básicas) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    
    <!-- CSS customizado -->
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>

    <div class="login-card">
        <h3>INOVATECH</h3>

        <form asp-action="Login" method="post">
            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Email">E-mail</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Digite seu e-mail" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Senha -->
            <div class="mb-3">
                <label for="Password">Senha</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Digite sua senha" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Lembrar-me -->
            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label class="form-check-label" for="RememberMe">Lembrar-me</label>
            </div>

            <!-- Botão -->
            <button type="submit">Entrar</button>
        </form>

        <!-- Link único -->
        <a href="#">Esqueci minha senha</a>
    </div>

    <!-- Scripts Bootstrap + validação MVC -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
